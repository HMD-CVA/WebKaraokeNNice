<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  // ===== CONFIGURATION & STATE =====
  let allThietBis = [];
  let filteredThietBis = [];
  let currentThietBiHistory = [];
  let currentRoomFilter = 'all';
  let thietBiPagination;

  // ===== PAGINATION CLASS =====
  class ThietBiPagination {
    constructor(itemsPerPage = 10) {
      this.itemsPerPage = itemsPerPage;
      this.currentPage = 1;
      this.allRows = [];
      this.filteredRows = [];
      this.totalPages = 1;
      this.maxVisiblePages = 5;
    }

    init() {
      this.allRows = Array.from(document.querySelectorAll('.thietbi-row'));
      this.filteredRows = [...this.allRows];
      this.updatePagination();
      this.renderPageNumbers();
    }

    applyFilters() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const statusFilter = document.getElementById('statusFilter').value;
      const loaiFilter = document.getElementById('loaiFilter').value;

      this.filteredRows = this.allRows.filter(row => {
        const tenThietBi = row.getAttribute('data-tenthietbi').toLowerCase();
        const maThietBi = row.getAttribute('data-matb').toLowerCase();
        const maPhong = row.getAttribute('data-maphong');
        const tinhtrang = row.getAttribute('data-tinhtrang');
        const loai = row.getAttribute('data-loai');

        const matchesSearch = !searchTerm || 
          tenThietBi.includes(searchTerm) || 
          maThietBi.includes(searchTerm) ||
          (maPhong && maPhong.toLowerCase().includes(searchTerm));
        const matchesStatus = !statusFilter || tinhtrang === statusFilter;
        const matchesLoai = !loaiFilter || loai === loaiFilter;
        
        // Room filter
        let matchesRoom = true;
        if (currentRoomFilter !== 'all') {
          if (currentRoomFilter === 'other') {
            matchesRoom = !maPhong || maPhong === '';
          } else {
            matchesRoom = maPhong === currentRoomFilter;
          }
        }

        return matchesSearch && matchesStatus && matchesLoai && matchesRoom;
      });

      this.currentPage = 1;
      this.updatePagination();
      this.renderPageNumbers();
    }

    updatePagination() {
      this.totalPages = Math.ceil(this.filteredRows.length / this.itemsPerPage);
      
      const startIndex = (this.currentPage - 1) * this.itemsPerPage;
      const endIndex = startIndex + this.itemsPerPage;

      this.allRows.forEach(row => row.style.display = 'none');
      
      this.filteredRows.forEach((row, index) => {
        if (index >= startIndex && index < endIndex) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });

      const start = Math.min(startIndex + 1, this.filteredRows.length);
      const end = Math.min(endIndex, this.filteredRows.length);
      document.getElementById('currentRange').textContent = this.filteredRows.length > 0 ? `${start}-${end}` : '0';
      document.getElementById('totalDevices').textContent = this.filteredRows.length;

      toggleEmptyState(this.filteredRows.length === 0);
      calculateFilteredStatistics(this.filteredRows);
    }

    renderPageNumbers() {
      const container = document.getElementById('pageNumbers');
      if (!container) return;

      container.innerHTML = '';

      if (this.totalPages <= 1) return;

      const createButton = (page, text = page, isActive = false) => {
        const button = document.createElement('button');
        button.textContent = text;
        button.className = 'page-btn' + (isActive ? ' active' : '');
        if (!isActive && page !== '...') {
          button.onclick = () => this.goToPage(page);
        }
        if (page === '...') button.disabled = true;
        return button;
      };

      container.appendChild(createButton(Math.max(1, this.currentPage - 1), '‚Äπ'));

      let pages = [];
      if (this.totalPages <= this.maxVisiblePages) {
        pages = Array.from({length: this.totalPages}, (_, i) => i + 1);
      } else {
        if (this.currentPage <= 3) {
          pages = [1, 2, 3, 4, '...', this.totalPages];
        } else if (this.currentPage >= this.totalPages - 2) {
          pages = [1, '...', this.totalPages - 3, this.totalPages - 2, this.totalPages - 1, this.totalPages];
        } else {
          pages = [1, '...', this.currentPage - 1, this.currentPage, this.currentPage + 1, '...', this.totalPages];
        }
      }

      pages.forEach(page => {
        container.appendChild(createButton(page, page, page === this.currentPage));
      });

      container.appendChild(createButton(Math.min(this.totalPages, this.currentPage + 1), '‚Ä∫'));
    }

    goToPage(page) {
      if (page < 1 || page > this.totalPages) return;
      this.currentPage = page;
      this.updatePagination();
      this.renderPageNumbers();
      document.getElementById('thietBiTable').scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  }

  // ===== INITIALIZATION =====
  document.addEventListener('DOMContentLoaded', function() {
