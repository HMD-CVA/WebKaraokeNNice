<div class="body-section" style="padding: 20px;">
    <!-- Header -->
    <header class="content-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0" id="pageTitle">Dashboard</h4>
                <small class="text-muted" id="pageSubtitle">Chào mừng trở lại, Admin!</small>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control modern-input" placeholder="Tìm kiếm...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <button class="btn btn-primary">
                    <i class="fas fa-bell me-2"></i>
                    Thông báo
                </button>
            </div>
        </div>
    </header>

    <!-- Stats Cards - Cập nhật tiêu đề -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-1 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Doanh Thu (Từ 01/11)</h6>
                            <h2 class="mb-0">{{shortCurrency stats.totalRevenue}}</h2>
                            <small class="{{#if stats.momIsUp}}text-success{{else}}text-danger{{/if}}">
                                {{percent stats.momPercent}} vs tháng 10
                            </small>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-2 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">KH Mới (Từ 01/11)</h6>
                            <h2 class="mb-0">{{numberVN stats.customersThisPeriod}}</h2>
                            <small class="{{trendClass stats.customersMoM}}">
                                {{percent stats.customersMoM}} vs tháng 10
                            </small>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-3 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Đơn Hàng (Từ 01/11)</h6>
                            <h2 class="mb-0">{{numberVN stats.ordersThisPeriod}}</h2>
                            <small class="{{trendClass stats.ordersMoM}}">
                                {{percent stats.ordersMoM}} vs tháng 10
                            </small>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phòng hát giữ nguyên -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-4 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Phòng Hát</h6>
                            <h2 class="mb-0">{{numberVN stats.roomsTotal}}</h2>
                            <small>{{numberVN stats.roomsActive}} đang hoạt động</small>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-microphone-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Analytics -->
    <div class="row mb-4">
    <div class="col-xl-8 mb-4">
        <div class="chart-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h5 class="mb-0">Doanh Thu Theo Ngày</h5>
                    <small class="text-muted">Từ {{stats.periodStart}} đến {{stats.periodEnd}}</small>
                </div>
                <div class="btn-group">
                    <button class="btn btn-outline-primary btn-sm active" onclick="changeChartType('daily')">Ngày</button>
                    <button class="btn btn-outline-primary btn-sm" onclick="changeChartType('weekly')">Tuần</button>
                    <button class="btn btn-outline-primary btn-sm" onclick="changeChartType('monthly')">Tháng</button>
                </div>
            </div>
            <canvas id="revenueChart" height="300"></canvas>
        </div>
    </div>
    <div class="col-xl-4 mb-4">
        <div class="chart-container h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">Phân Loại Doanh Thu</h5>
                <small class="text-muted">Từ {{stats.periodStart}}</small>
            </div>
            <canvas id="categoryChart" height="300"></canvas>
        </div>
    </div>
    </div>

    <!-- Recent Activity & Top Products -->
    <div class="row">
        <div class="col-xl-6 mb-4">
            <div class="chart-container">
                <h5 class="mb-4">Hoạt Động Gần Đây</h5>
                <div class="activity-list">
                    {{#each recentActivities}}
                    <div class="activity-item">
                        <div class="activity-icon bg-{{this.iconColor}}-light">
                            <i class="fas fa-{{this.icon}}"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">{{this.title}}</h6>
                            <p class="mb-0 text-muted">{{this.description}}</p>
                            <small class="text-muted">{{this.time}}</small>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="col-xl-6 mb-4">
            <div class="chart-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="mb-0">Sản Phẩm Phổ Biến</h5>
                    <a href="/admin/mathang" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="row g-3">
                    {{#each topProducts}}
                    <div class="col-12">
                        <div class="card product-card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <img src="{{this.LinkAnh}}" class="product-img me-3" alt="{{this.TenHang}}">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">{{this.TenHang}}</h6>
                                        <p class="mb-0 text-muted">{{this.LoaiHang}}</p>
                                    </div>
                                    <div class="text-end">
                                        <h6 class="mb-1 text-success">{{formatCurrency this.DonGia}}</h6>
                                        <small class="text-muted">Đã bán: {{this.soLuongBan}}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Thêm Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
// Lấy dữ liệu từ server
const chartData = {{{chartData}}};

// Khởi tạo biểu đồ doanh thu theo ngày
const revenueCtx = document.getElementById('revenueChart').getContext('2d');
const revenueChart = new Chart(revenueCtx, {
    type: 'line',
    data: {
        labels: chartData.dailyRevenue.map(item => item.label),
        datasets: [{
            label: 'Doanh thu (VNĐ)',
            data: chartData.dailyRevenue.map(item => item.value),
            borderColor: '#4361ee',
            backgroundColor: 'rgba(67, 97, 238, 0.1)',
            tension: 0.4,
            fill: true,
            pointBackgroundColor: '#4361ee',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            pointRadius: 4
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                display: false
            },
            tooltip: {
                callbacks: {
                    label: function(context) {
                        return new Intl.NumberFormat('vi-VN').format(context.parsed.y) + ' VNĐ';
                    }
                }
            }
        },
        scales: {
            x: {
                ticks: {
                    maxTicksLimit: 10, // Giới hạn số lượng nhãn hiển thị
                    callback: function(value, index) {
                        // Hiển thị mỗi 3 ngày một lần nếu có nhiều ngày
                        return index % 3 === 0 ? this.getLabelForValue(value) : '';
                    }
                }
            },
            y: {
                beginAtZero: true,
                ticks: {
                    callback: function(value) {
                        if (value >= 1000000) {
                            return (value / 1000000).toFixed(1) + 'M';
                        } else if (value >= 1000) {
                            return (value / 1000).toFixed(0) + 'K';
                        }
                        return value;
                    }
                }
            }
        }
    }
});

// Khởi tạo biểu đồ phân loại
const categoryCtx = document.getElementById('categoryChart').getContext('2d');
const categoryChart = new Chart(categoryCtx, {
    type: 'doughnut',
    data: {
        labels: chartData.revenueByCategory.map(item => item.label),
        datasets: [{
            data: chartData.revenueByCategory.map(item => item.value),
            backgroundColor: [
                '#4361ee', '#3f37c9', '#4cc9f0', '#f72585', 
                '#4895ef', '#560bad', '#7209b7', '#b5179e'
            ],
            borderWidth: 2,
            borderColor: '#fff'
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom',
                labels: {
                    padding: 20,
                    usePointStyle: true
                }
            },
            tooltip: {
                callbacks: {
                    label: function(context) {
                        const value = context.parsed;
                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                        const percentage = ((value / total) * 100).toFixed(1);
                        return `${context.label}: ${new Intl.NumberFormat('vi-VN').format(value)} VNĐ (${percentage}%)`;
                    }
                }
            }
        }
    }
});

// Hàm thay đổi loại biểu đồ
function changeChartType(type) {
    // Có thể phát triển thêm để thay đổi dữ liệu theo tuần/tháng
    console.log('Đổi sang loại biểu đồ:', type);
    
    // Cập nhật trạng thái nút active
    document.querySelectorAll('.btn-group .btn').forEach(btn => {
        btn.classList.remove('active');
    });
    event.target.classList.add('active');
}
</script>

