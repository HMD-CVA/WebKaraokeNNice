/* ===== POLICY GRID ===== */
.policy-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
  padding: 1rem;
}

.policy-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(122, 0, 255, 0.2);
  border-radius: 15px;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
}

.policy-card:hover {
  transform: translateY(-10px);
  border-color: var(--cyber-cyan);
  box-shadow: 0 15px 35px rgba(0, 240, 255, 0.3);
}

.policy-icon {
  width: 70px;
  height: 70px;
  margin: 0 auto 1rem;
  background: linear-gradient(135deg, var(--cyber-purple), var(--cyber-cyan));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.policy-card:hover .policy-icon {
  transform: scale(1.1) rotate(360deg);
}

.policy-icon i {
  font-size: 2rem;
  color: white;
}

.policy-card h4 {
  color: var(--cyber-yellow);
  font-size: 1.3rem;
  margin-bottom: 0.8rem;
}

.policy-card p {
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
  .services-banner {
    height: 300px;
  }

  .services-grid,
  .food-services-grid,
  .special-services-grid,
  .policy-grid {
    grid-template-columns: 1fr;
  }

  .service-card,
  .food-service-card,
  .special-card,
  .policy-card {
    padding: 1.5rem;
  }
}

@media (max-width: 480px) {
  .services-banner {
    height: 250px;
  }

  .service-card h3 {
    font-size: 1.5rem;
  }

  .price-amount {
    font-size: 2rem;
  }
}
