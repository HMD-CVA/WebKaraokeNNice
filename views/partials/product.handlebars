<script>
  // JavaScript cho chức năng xem ảnh
  document.addEventListener('DOMContentLoaded', function () {
    // Lấy tất cả các nút "Xem ảnh"
    const viewButtons = document.querySelectorAll('.karaoke-view-btn');
    const modal = document.getElementById('imageModal');
    const modalImg = document.getElementById('modalImage');
    const modalTitle = document.getElementById('modalTitle');
    const modalDescription = document.getElementById('modalDescription');
    const closeBtn = document.querySelector('.karaoke-modal-close');

    // Xử lý click nút "Xem ảnh"
    viewButtons.forEach(button => {
      button.addEventListener('click', function () {
        const card = this.closest('.karaoke-product-card');
        const image = card.querySelector('.karaoke-image-container img');
        const roomName = card.querySelector('.karaoke-room-name').textContent;
        const roomType = card.querySelector('.karaoke-room-type').textContent;

        // Hiển thị ảnh và thông tin trong modal
        modalImg.src = image.src;
        modalImg.alt = image.alt;
        modalTitle.textContent = roomName;
        modalDescription.textContent = roomType;

        // Hiển thị modal
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden'; // Ngăn scroll
      });
    });

    // Đóng modal khi click nút close
    closeBtn.addEventListener('click', function () {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    });

    // Đóng modal khi click bên ngoài
    modal.addEventListener('click', function (e) {
      if (e.target === modal) {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
      }
    });

    // Đóng modal bằng phím ESC
    document.addEventListener('keydown', function (e) {
      if (e.key === 'Escape' && modal.style.display === 'flex') {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
      }
    });
  });
</script>

















