<div id="container">
  <!-- BANNER START -->
  <div class="banner-container">
    <button class="control-btn prev-btn">❮</button>

    <div class="banner-viewport">
      <div class="liquid-border"></div>
      <div class="liquid-bubble"></div>
      <div class="banner-track">
        <div class="banner-item">
          <img src="/image/Banner_1.png" alt="Ad 1">
        </div>
        <div class="banner-item">
          <img src="/image/Banner_2.jpg" alt="Ad 2">
        </div>
        <div class="banner-item">
          <img src="/image/Banner_3.jpeg" alt="Ad 3">
        </div>
        <div class="banner-item">
          <img src="/image/Banner_4.jpg" alt="Ad 4">
        </div>
        <div class="banner-item">
          <img src="/image/Banner_5.jpg" alt="Ad 5">
        </div>
      </div>
    </div>

    <button class="control-btn next-btn">❯</button>

    <div class="indicators">
      <div class="indicator active" data-slide="0"></div>
      <div class="indicator" data-slide="1"></div>
      <div class="indicator" data-slide="2"></div>
      <div class="indicator" data-slide="3"></div>
      <div class="indicator" data-slide="4"></div>
    </div>

  </div>
  <!-- BANNER END -->

  <div id="wrapper">
    <div class="ListContainer1 products-section">
      <h1>
        <i class="fas fa-star sparkle-left"></i>
        <i class="fas fa-microphone" aria-hidden="true"></i>
        Phòng Hát KARAOKE
        <i class="fa-solid fa-music"></i>
        <i class="fas fa-star sparkle-right"></i>
      </h1>
      <div class="filterRoom">
        <select>
          <option selected>Tất cả phòng</option>
          {{#each roomTypes}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>

      <div class="products-container">
        <div class="products" id="productsGrid">
          {{#each phonghats}}
          {{> product}}
          {{/each}}
        </div>

        <!-- Pagination Controls -->
        <div class="pagination-controls" style="display: none;">
          <button class="pagination-btn prev-btn" id="prevPage" disabled>
            <i class="fas fa-chevron-left"></i>
            Trang trước
          </button>

          <div class="page-indicator">
            <span id="currentPage">1</span>
            <span class="page-separator">/</span>
            <span id="totalPages">1</span>
          </div>

          <button class="pagination-btn next-btn" id="nextPage">
            Trang sau
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>

    <div class="ListContainer2">
      <h1>
        <i class="fas fa-gem gem-left"></i>
        <i class="fas fa-utensils"></i>
            Món Ăn Nổi Bật
        <i class="fas fa-fire flame-icon"></i>
        <i class="fas fa-gem gem-right"></i>
      </h1>

      <h3>
        <i class="fas fa-rocket rocket-left"></i>
        <i class="fas fa-star"></i>
        Trăm món mới - khơi thú vị
        <i class="fas fa-star"></i>
        <i class="fas fa-rocket rocket-right"></i>
      </h3>

      <!-- Food Banner -->
      <div class="food-banner-container">
        <button class="food-control-btn food-prev-btn">❮</button>

        <div class="food-banner-viewport">
          <div class="food-banner-track" id="foodBannerTrack">
            <!-- Food items will be inserted by JavaScript -->
          </div>
        </div>

        <button class="food-control-btn food-next-btn">❯</button>

        <div class="food-indicators">
          <!-- Indicators will be created by JavaScript -->
        </div>
      </div>
    </div>
    
    <div class="ListContainer3">
      <h1>
        <i class="fas fa-star sparkle-left"></i>
        <i class="fas fa-microphone" aria-hidden="true"></i>
          Cảm Nhận Khách Hàng
        <i class="fa-solid fa-music"></i>
        <i class="fas fa-star sparkle-right"></i>
      </h1>
    </div>
  </div>
</div>

<!-- MODAL ĐẶT PHÒNG -->
<div id="bookingModal" class="modal">
  <div class="modal-container">
    <!-- Header -->
    <div class="modal-header">
      <div class="header-content">
        <div class="header-icon">
          <i class="fas fa-calendar-alt"></i>
        </div>
        <div class="header-text">
          <h2>ĐẶT PHÒNG KARAOKE</h2>
          <p>Hoàn tất thông tin đặt phòng của bạn</p>
        </div>
      </div>
      <button class="close-btn">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Body với scroll -->
    <div class="modal-body">
      <div class="body-content">

        
        <!-- Thông tin phòng -->
        <div class="room-card-horizontal">
          <div class="room-image-horizontal">
            <img id="modalRoomImage" src="" alt="Room Image">
            <div class="room-badge-horizontal">
              <i class="fas fa-crown"></i>
              <span id="modalRoomType">VIP</span>
            </div>
            <div class="room-overlay-horizontal">
              <div class="room-stats-horizontal">
                <div class="stat-item-horizontal">
                  <i class="fas fa-users"></i>
                  <span id="modalRoomCapacity"></span>người
                </div>
                <div class="stat-item-horizontal">
                  <i class="fas fa-star"></i>
                  <span>4.8</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="room-content-horizontal">
            <div class="room-header-horizontal">
              <div class="room-title-section-horizontal">
                <h3 id="modalRoomName">Phòng Karaoke VIP</h3>
                <div class="room-code-horizontal">
                  <i class="fas fa-hashtag"></i>
                  <span id="modalRoomID">P001</span>
                </div>
              </div>
              <button class="btn-favorite-horizontal">
                <i class="far fa-heart"></i>
              </button>
            </div>
            
            <div class="room-features-horizontal">
              <div class="feature-tag-horizontal">
                <i class="fas fa-wifi"></i>
                <span>WiFi Premium</span>
              </div>
              <div class="feature-tag-horizontal">
                <i class="fas fa-tv"></i>
                <span>Màn hình 4K</span>
              </div>
              <div class="feature-tag-horizontal">
                <i class="fas fa-microphone-alt"></i>
                <span>Mic không dây</span>
              </div>
              <div class="feature-tag-horizontal">
                <i class="fas fa-snowflake"></i>
                <span>Điều hòa</span>
              </div>
              <div class="feature-tag-horizontal">
                <i class="fas fa-couch"></i>
                <span>Ghế sofa</span>
              </div>
            </div>
            
            <div class="room-footer-horizontal">
              <div class="pricing-section-horizontal">
                <div class="price-main-horizontal">
                  <span class="price-amount-horizontal" id="modalRoomPrice"></span>
                  <span class="price-unit-horizontal"></span>
                </div>
                <div class="price-note-horizontal">
                  <i class="fas fa-check-circle"></i>
                  <span>Đã bao gồm VAT</span>
                </div>
              </div>
              
              <div class="room-meta-horizontal">
                <div class="availability-horizontal">
                  <div class="status-indicator-horizontal available"></div>
                  <span id="modalRoomStatus">Có sẵn</span>
                </div>
              </div>
            </div>
          </div>
        </div>



        <!-- Form đặt phòng được tối ưu -->
        <form id="bookingForm" class="booking-form">
          <!-- Bước 1: Thông tin cá nhân -->
          <div class="form-section active" data-step="1">
            <div class="section-header">
              <div class="section-icon">
                <i class="fas fa-user-circle"></i>
              </div>
              <div class="section-title">
                <h4>Thông tin cá nhân</h4>
                <p>Nhập thông tin liên hệ của bạn</p>
              </div>
            </div>
            
            <div class="form-grid">
              <div class="input-field">
                <div class="input-container">
                  <i class="fas fa-user input-icon"></i>
                  <input type="text" id="customerName" name="customerName" required placeholder="Họ và tên *">
                </div>
                <div class="input-hint">Ví dụ: Nguyễn Văn A</div>
              </div>
              
              <div class="input-field">
                <div class="input-container">
                  <i class="fas fa-phone input-icon"></i>
                  <input type="tel" id="customerPhone" name="customerPhone" required placeholder="Số điện thoại *">
                </div>
                <div class="input-hint">Ví dụ: 0912345678</div>
              </div>
              
              <div class="input-field">
                <div class="input-container">
                  <i class="fas fa-envelope input-icon"></i>
                  <input type="email" id="customerEmail" name="customerEmail" placeholder="Email (tùy chọn)">
                </div>
                <div class="input-hint">Để nhận thông báo xác nhận</div>
              </div>
            </div>
          </div>

          <!-- Bước 2: Thời gian đặt -->
          <div class="form-section" data-step="2">
            <div class="section-header">
              <div class="section-icon">
                <i class="fas fa-clock"></i>
              </div>
              <div class="section-title">
                <h4>Thời gian đặt phòng</h4>
                <p>Chọn ngày và giờ bắt đầu</p>
              </div>
            </div>
            
            <!-- 3 trường trên cùng 1 hàng -->
            <div class="form-row-3col">
              <!-- Ô nhập số người -->
              <div class="input-field">
                <label class="input-label">
                  <i class="fas fa-users"></i>
                  Số người *
                </label>
                <div class="input-container">
                  <input type="number" id="numberOfPeople" name="numberOfPeople" min="1" required placeholder="Nhập số người">
                </div>
                <div class="input-hint">Tối đa: <span id="maxCapacityHint"></span> người</div>
              </div>
              
              <!-- Chọn ngày -->
              <div class="input-field">
                <label class="input-label">
                  <i class="fas fa-calendar-day"></i>
                  Ngày đặt phòng *
                </label>
                <div class="input-container">
                  <input type="date" id="bookingDate" name="bookingDate" required>
                </div>
              </div>
              
              <!-- Chọn giờ -->
              <div class="input-field">
                <label class="input-label">
                  <i class="fas fa-clock"></i>
                  Giờ bắt đầu *
                </label>
                <div class="input-container">
                  <input type="time" id="bookingTime" name="bookingTime" required>
                  </input>
                </div>
              </div>
            </div>
          </div>

          <!-- Bước 3: Dịch vụ thêm -->
          <div class="form-section" data-step="3">
            <div class="section-header">
              <div class="section-icon">
                <i class="fas fa-concierge-bell"></i>
              </div>
              <div class="section-title">
                <h4>Dịch vụ thêm</h4>
                <p>Chọn các dịch vụ bổ sung (tùy chọn)</p>
              </div>
            </div>
            
            <div class="services-grid">
              <div class="service-card" data-service="food">
                <div class="service-header">
                  <i class="fas fa-utensils"></i>
                  <h5>Set đồ ăn VIP</h5>
                  <span class="service-price">+200,000 VNĐ</span>
                </div>
                <p class="service-desc">Bao gồm snack, trái cây và các món nhẹ</p>
                <label class="service-toggle">
                  <input type="checkbox" name="services" value="food">
                  <span class="toggle-slider"></span>
                </label>
              </div>
              
              <div class="service-card" data-service="drink">
                <div class="service-header">
                  <i class="fas fa-cocktail"></i>
                  <h5>Combo nước giải khát</h5>
                  <span class="service-price">+150,000 VNĐ</span>
                </div>
                <p class="service-desc">Nước ngọt, trà, cà phê và nước suối</p>
                <label class="service-toggle">
                  <input type="checkbox" name="services" value="drink">
                  <span class="toggle-slider"></span>
                </label>
              </div>
              
              <div class="service-card" data-service="decor">
                <div class="service-header">
                  <i class="fas fa-gem"></i>
                  <h5>Trang trí đặc biệt</h5>
                  <span class="service-price">+300,000 VNĐ</span>
                </div>
                <p class="service-desc">Trang trí không gian theo chủ đề</p>
                <label class="service-toggle">
                  <input type="checkbox" name="services" value="decor">
                  <span class="toggle-slider"></span>
                </label>
              </div>
              
              <div class="service-card" data-service="photo">
                <div class="service-header">
                  <i class="fas fa-camera"></i>
                  <h5>Chụp ảnh kỷ niệm</h5>
                  <span class="service-price">+100,000 VNĐ</span>
                </div>
                <p class="service-desc">Chụp ảnh và in ngay tại chỗ</p>
                <label class="service-toggle">
                  <input type="checkbox" name="services" value="photo">
                  <span class="toggle-slider"></span>
                </label>
              </div>
            </div>
          </div>

          <!-- Bước 4: Ghi chú -->
          <div class="form-section" data-step="4">
            <div class="section-header">
              <div class="section-icon">
                <i class="fas fa-sticky-note"></i>
              </div>
              <div class="section-title">
                <h4>Yêu cầu đặc biệt</h4>
                <p>Thêm ghi chú cho đơn đặt phòng của bạn</p>
              </div>
            </div>
            
            <div class="input-field full-width">
              <div class="input-container textarea-container">
                <textarea id="bookingNote" name="bookingNote" placeholder="Nhập yêu cầu đặc biệt, dịch vụ thêm, hoặc ghi chú khác... (tối đa 500 ký tự)"></textarea>
                <div class="textarea-footer">
                  <div class="char-count">
                    <span id="charCount">0</span>/500 ký tự
                  </div>
                  <div class="text-hint">
                    <i class="fas fa-lightbulb"></i>
                    Ghi chú sẽ giúp chúng tôi phục vụ bạn tốt hơn
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Footer -->
    <div class="modal-footer">
  <div class="footer-content">
    <!-- Action Buttons - Right Side (Vertical Stack) -->
    <div class="footer-actions">
      <div class="submit-section">
        <button type="button" class="btn btn-secondary">
          <i class="fas fa-times"></i>
          Hủy
        </button>
        <button type="submit" form="bookingForm" id="submitBookingBtn" class="btn btn-primary">
          <i class="fas fa-check-double"></i>
          Xác nhận đặt phòng
        </button>
      </div>
    </div>
  </div>
</div>
  </div>
</div>

