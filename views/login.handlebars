<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --primary-color: #5850A1;
            /* Tím đậm - Màu chủ đạo */
            --secondary-color: #4C4694;
            /* Tiêu đề */
            --background-color: #F8F9FA;
            /* Nền nhẹ của Bootstrap */
            --card-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        body {
            /* Áp dụng font chữ Segoe UI cho toàn bộ trang */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-color);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            /* Căn giữa hoàn hảo bằng Flexbox */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            border: none;
            border-radius: 1rem;
            box-shadow: var(--card-shadow);
            max-width: 400px;
            width: 100%;
            background-color: white;
        }

        .login-header h2 {
            color: var(--secondary-color);
            font-weight: 700;
        }

        .btn-custom-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
            font-weight: 600;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            transition: background-color 0.3s;
            font-family: inherit;
        }

        .btn-custom-primary:hover {
            background-color: #6C63B7;
            border-color: #6C63B7;
            color: white;
        }

        .form-control {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-family: inherit;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(88, 80, 161, 0.25);
        }

        /* Tùy chỉnh cho Input Group chứa mật khẩu */
        .input-group-text {
            border-left: none;
            background-color: white;
            cursor: pointer;
            padding-right: 15px;
            border-radius: 0 0.5rem 0.5rem 0;
        }

        /* STYLE THÔNG BÁO LỖI (ALERT) */
        .error-message-alert {
            padding: 0.75rem 1.25rem;
            margin-top: 15px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
            border-radius: 0.5rem;
            color: #721c24;
            background-color: #f8d7da;
            font-size: 15px;
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="card login-card p-4 p-md-5">
        <div class="login-header text-center mb-4">
            <h2>Đăng Nhập Admin</h2>
        </div>

        <form id="loginForm">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required
                    placeholder="Nhập email đăng nhập">
            </div>

            <div class="mb-4">
                <label for="password" class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" name="password" required
                        placeholder="Nhập mật khẩu">
                    <span class="input-group-text" id="togglePassword">
                        <i class="bi bi-eye-slash-fill"></i>
                    </span>
                </div>
            </div>

            <div id="errorMessage" class="d-none error-message-alert"></div>

            <button type="submit" class="btn btn-custom-primary w-100" id="btn-login">
                Đăng Nhập
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        class LoginPage {
            constructor() {
                this.loginForm = document.getElementById('loginForm')
                this.inputEmail = document.getElementById('email')
                this.inputPassword = document.getElementById('password')
                this.btnTogglePassword = document.getElementById('togglePassword')
                this.errorMessage = document.getElementById('errorMessage')

                this.initEventListeners()
            }

            initEventListeners() {
                if (this.btnTogglePassword) {
                    this.btnTogglePassword.addEventListener('click', this.togglePasswordVisibility.bind(this))
                }
                if (this.loginForm) {
                    this.loginForm.addEventListener('submit', this.handleLoginSubmit.bind(this))
                }
            }

            togglePasswordVisibility() {
                const icon = document.querySelector('#togglePassword i')
                const type = this.inputPassword.getAttribute('type') === 'text' ? 'password' : 'text'
                this.inputPassword.setAttribute('type', type)

                if (type === 'text') {
                    icon.classList.remove('bi-eye-slash-fill')
                    icon.classList.add('bi-eye-fill')
                } else {
                    icon.classList.remove('bi-eye-fill')
                    icon.classList.add('bi-eye-slash-fill')
                }
            }

            async handleLoginSubmit(event) {
                try {
                    event.preventDefault()

                    this.hideErrorMessage()

                    const response = await fetch('/api/login', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            email: this.inputEmail.value.trim(),
                            password: this.inputPassword.value.trim()
                        })
                    })

                    const data = await response.json()

                    if (response.ok) {
                        window.location = '/admin'
                    }
                    else {
                        this.showErrorMessage(data.message)
                    }
                }
                catch (error) {
                    console.error('Lỗi khi kiểm tra thông tin đăng nhập:', error);
                }
            }

            showErrorMessage(message) {
                this.errorMessage.classList.remove('d-none')
                this.errorMessage.innerText = message
            }

            hideErrorMessage(message) {
                this.errorMessage.classList.add('d-none')
                this.errorMessage.innerText = ''
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const loginPage = new LoginPage()
        })
    </script>
</body>

</html>


