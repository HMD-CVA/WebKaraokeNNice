  // ===== PAGINATION CLASS =====
  class EmployeePagination {
    constructor(itemsPerPage = 10) {
      this.itemsPerPage = itemsPerPage;
      this.currentPage = 1;
      this.allRows = [];
      this.filteredRows = [];
      this.totalPages = 1;
      this.maxVisiblePages = 5;
    }

    init() {
      this.allRows = Array.from(document.querySelectorAll('.employee-row'));
      this.filteredRows = [...this.allRows];
      this.updatePagination();
      this.renderPageNumbers();
    }

    applyFilters() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const roleFilter = document.getElementById('roleFilter').value;
      const shiftFilter = document.getElementById('shiftFilter').value;
      const statusFilter = document.getElementById('statusFilter').value;

      this.filteredRows = this.allRows.filter(row => {
        const name = row.getAttribute('data-name').toLowerCase();
        const phone = row.getAttribute('data-phone').toLowerCase();
        const email = row.getAttribute('data-email').toLowerCase();
        const role = row.getAttribute('data-role');
        const shift = row.getAttribute('data-shift');
        const status = row.getAttribute('data-status');

        const matchesSearch = !searchTerm || 
          name.includes(searchTerm) || 
          phone.includes(searchTerm) ||
          email.includes(searchTerm);
        const matchesRole = !roleFilter || role === roleFilter;
        const matchesShift = !shiftFilter || shift === shiftFilter;
        const matchesStatus = !statusFilter || status === statusFilter;

        return matchesSearch && matchesRole && matchesShift && matchesStatus;
      });

      this.currentPage = 1;
      this.updatePagination();
      this.renderPageNumbers();
    }

    updatePagination() {
      this.totalPages = Math.ceil(this.filteredRows.length / this.itemsPerPage);
      
      const startIndex = (this.currentPage - 1) * this.itemsPerPage;
      const endIndex = startIndex + this.itemsPerPage;

      this.allRows.forEach(row => row.style.display = 'none');
      
      this.filteredRows.forEach((row, index) => {
        if (index >= startIndex && index < endIndex) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });

      const start = Math.min(startIndex + 1, this.filteredRows.length);
      const end = Math.min(endIndex, this.filteredRows.length);
      document.getElementById('currentRange').textContent = this.filteredRows.length > 0 ? `${start}-${end}` : '0';
      document.getElementById('totalEmployees').textContent = this.filteredRows.length;

      toggleEmptyState(this.filteredRows.length === 0);
      calculateFilteredStatisticsFromRows(this.filteredRows);
    }

    renderPageNumbers() {
      const container = document.getElementById('pageNumbers');
      if (!container) return;

      container.innerHTML = '';

      if (this.totalPages <= 1) return;

      const createButton = (page, text = page, isActive = false) => {
        const button = document.createElement('button');
        button.textContent = text;
        button.className = 'page-btn' + (isActive ? ' active' : '');
        if (!isActive && page !== '...') {
          button.onclick = () => this.goToPage(page);
        }
        if (page === '...') button.disabled = true;
        return button;
      };

      container.appendChild(createButton(Math.max(1, this.currentPage - 1), '‚Äπ'));

      let pages = [];
      if (this.totalPages <= this.maxVisiblePages) {
        pages = Array.from({length: this.totalPages}, (_, i) => i + 1);
      } else {
        if (this.currentPage <= 3) {
          pages = [1, 2, 3, 4, '...', this.totalPages];
        } else if (this.currentPage >= this.totalPages - 2) {
          pages = [1, '...', this.totalPages - 3, this.totalPages - 2, this.totalPages - 1, this.totalPages];
        } else {
          pages = [1, '...', this.currentPage - 1, this.currentPage, this.currentPage + 1, '...', this.totalPages];
        }
      }

      pages.forEach(page => {
        container.appendChild(createButton(page, page, page === this.currentPage));
      });

      container.appendChild(createButton(Math.min(this.totalPages, this.currentPage + 1), '‚Ä∫'));
    }

    goToPage(page) {
      if (page < 1 || page > this.totalPages) return;
      this.currentPage = page;
      this.updatePagination();
      this.renderPageNumbers();
      document.getElementById('employeesTable').scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  }

